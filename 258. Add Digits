class Solution(object):
    def addDigits(self, num):
        """
        :type num: int
        :rtype: int
        """
        if num == 0:
            return 0
        elif num % 9 == 0:
            return 9
        else:
            return num % 9

# Test cases
solution = Solution()
print(solution.addDigits(38))  # Output: 2
print(solution.addDigits(0))   # Output: 0
